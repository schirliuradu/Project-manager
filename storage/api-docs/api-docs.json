{
    "openapi": "3.0.0",
    "info": {
        "title": "Project Manager OpenApi Documentation",
        "description": "Project Manager OpenApi Documentation",
        "contact": {
            "email": "schirliuradu@gmail.com"
        },
        "license": {
            "name": "Apache 2.0",
            "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
